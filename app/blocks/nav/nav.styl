.nav
	+r($t)
		position relative
		min-height 48px
	&__list
		font-size 0
		+r($t)
			display none

	&__item,
	li
		display inline-block
		vertical-align top
		+r($t)
			display block

		&:first-child
			a
				padding-left 0
		&:last-child
			a
				padding-right 0
	&__link,
	a
		padding-top 14px
		padding-right 26px
		padding-bottom 15px
		padding-left 26px
		display block
		font-size 17px
		color #FFF
		text-decoration none
		white-space nowrap
		&:hover
			color #85b443
		+r($d)
			padding-left 16px
			padding-right 16px
	.current-menu-item
		a
			color #85b443
	&__item
		position relative
	&__item_submenu
		&:hover
			background #f0f0f1
			color #4361b4
			a
				color #4361b4
			.submenu
				display block

	&__trigger
		position relative
		top 7px
		display none
		float right
		sprite($menu_button)
		hide-text()
		cursor pointer
		+r($t)
			display block
			font-size 18px
	&__trigger_active
		width 54px
		height 36px
		background url(../images/general/menu-button-active.svg) 0 0 no-repeat
	&__check
		display none
		+r($t)
			&:checked ~
				.nav__list
					position absolute
					z-index 10
					display block
					top 100%
					right -21px
					min-width 280px
					min-height 100vh
					background #ffffff
					text-align right
					text-align-last right
					&:after
						display none
					li
						a
							position relative
							padding-right 16px
							display inline-block
							font-size 19px
							color #4361b4
							&:hover
								color #85b443
						&:last-child
							a
								padding-right 16px
					.submenu
						position relative
						padding 16px
						padding 0
						min-width 100%
					.nav__item_submenu
						.nav__link
							&:after
								position absolute
								top 50%
								left -26px
								margin-top -13px
								content ""
								sprite($submenu_icon)
							&:hover
								&:after
									sprite($submenu_icon_active)

					.submenu__title
						margin-bottom 25px
					.submenu__item
						margin-bottom 15px
						&:last-child
							a
								padding 0 16px 0 0

.submenu
	position absolute
	z-index 1
	top 100%
	left 0
	padding-top 30px
	padding-left 30px
	padding-bottom 30px
	padding-right 30px
	display none
	min-width 360px
	background #F0F0F1
	border 1px solid #E6E6E7
	border-width 0 1px 1px
	&__menu
		margin-bottom 30px
		+r($t)
			margin-bottom 10px
	&__title
		margin-bottom 10px
		font-size 23px
		a.submenu__link
			padding 0
			font-size 23px
			color #4d4d4d
	&__item,
	li
		margin-bottom 5px
		padding 0
		display block
		a.submenu__link
			padding 0
			font-size 17px
			color #4d4d4d

	&__link
		padding 0
		color #4d4d4d
		text-decoration none
		&:hover
			text-decoration underline
	&__link_active
		sprite($submenu_icon_active)
