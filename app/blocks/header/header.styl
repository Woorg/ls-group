.header
	&__in
		@extends .in-second
		padding-top 24px
		padding-bottom 18px
	&__row
		clearfix()
	&__row_top
		background #FFF
	&__row_bottom
		background #4a65ac url(../images/general/menu.jpg) 0 0 repeat-x
		.header__in
			padding-top 0
			padding-bottom 0


	&__logo,
	&__slogan,
	&__button,
	&__contacts
		display inline-block
		vertical-align top
		font-size 19px
		color #636362
		line-height 1
		+r($t-s)
			display block
	&__logo
		+r($t-s)
			margin 0 auto 10px

	&__slogan
		margin-left 188px
		margin-top 19px
		color #636362
		+r($d-l)
			margin-left 54px
			margin-left ratio-percentage(54, $d-l)
		+r($d)
			margin-top 6px
			margin-left 6px
			width 232px
			text-align center
		+r($t)
			width 200px
			font-size 16px
		+r($t-s)
			margin 0 auto 10px
	&__button
		margin-left 164px
		@extends .button
		height 50px
		color #FFF
		+r($d-l)
			margin-left 55px
			margin-left ratio-percentage(88, 1320)
		+r($d)
			margin-left 16px

		+r($t)
			display none
	&__contacts
		margin-left 46px
		margin-top 6px
		// float right
		+r($d-l)
			margin-left 30px
			float right
		+r($d)
			margin-left 6px
			float right
		+r($t)
			float right
		+r($t-s)
			float none
			margin-left 0
			text-align center


.logo
	sprite($logo)
	hide-text()
.logo_second
	sprite($logo_second)
.contacts
	// width 152px
	text-align right
	font-size 19px
	color #4d4d4d

	+r($t)
		font-size 16px
		width auto
	+r($t-s)
		text-align center
	&__phone,
	&__email
		margin-bottom 7px
		display block
		color #4d4d4d
		line-height 1
		text-decoration none






.header__hide
	display none

.header
	&__row_sticky
		position fixed
		z-index 20
		top 0
		left 0
		right 0
		background #4a65ac url(../images/general/menu.jpg) 0 0 repeat-x
		// height 50px
		.header__in
			padding-top 0
			padding-bottom 0
			white-space nowrap
			clearfix()
		.logo
			margin-top 8px
			sprite($logo_sticky)
			float left
		.header__slogan
			display none
		.nav
			margin-top 2px
			margin-left 20px
			margin-bottom 1px
			float left
			clearfix()

			+r($t)
				float right

		.nav__trigger
			margin-top -2px
		.nav__list
			&:after
				display none
			// a
			// 	padding-top 17px
			// 	padding-left 16px
			// 	padding-right 16px
			// 	padding-bottom 17px
		.nav__link
			+r($d)
				padding-left 4px
				padding-right 4px

		.header__button
			@extends .button-small
			margin-left 22px
			margin-top 10px
			height 34px
			+r($d-l)
				display none
		.header__contacts
			margin-top 4px
			margin-left 12px
			margin-right -10px
			+r($d-l)
				float right
			+r($d)
				margin-left 4px
			a
				margin-bottom 5px
				font-size 17px
				color #FFF
