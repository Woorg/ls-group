.prod
	background url(../images/general/hero-bg.jpg) 50% 0 / cover no-repeat
	overflow hidden
	&__in
		@extends .in
		padding-top 15px
		padding-bottom 14px
		+r($t)
			padding-bottom 34px
	&__title
		@extends .title
		margin-bottom 10px
		text-align left
	&__list-w
		overflow hidden
	&__list
		margin-right -20px
		font-size 0
	&__item
		margin-right 17px
		margin-bottom 15px
		width 416px
		min-height 354px
		display inline-block
		vertical-align top
		background #fff
		background rgba(255, 255, 255, .8)

		+r($d-l)
			margin-right ratio-percentage(13,1004)
			width ratio-percentage(320, 1004)
		+r($t)
			min-height 200px
		+r($t)
			border-radius 3px
			padding-top 26px
		+r($t-s)
			margin-right 0
			// width 96%
			width 100%
		&_service
			background rgba(255, 255, 255, .8) url(../images/general/service.png) 10px 100% no-repeat
			min-height 127px
			height 127px
			+r($d-l)
				position relative
				min-height 98px
				height 98px
			+r($t)
				padding 0
				// width 98%
				width 100%

			.prod__link
				display table
				width 100%
				height 100%

			.prod__item-title
				padding-top 54px
				padding-right 90px
				padding-bottom 54px
				padding-left 90px
				+r($d-l)
					padding-top 0
					padding-right 0
					padding-bottom 0
					padding-left 0
					display table-cell
					vertical-align middle
		&_wide
			width 848px
			min-height 127px
			height 127px
			background url(../images/general/banner.png) 0 50% / cover no-repeat
			+r($d-l)
				width ratio-percentage(652,1004)
				min-height 98px
				height 98px
			+r($t)
				padding 0
				// width 98%
				width 100%
				min-height 66px
				height 66px
			.prod__link
				min-height 100%
				height 100%
			img
				position static
				transform none
				max-width 100%
				height auto
	&__link
		display block
		text-decoration none
	&__image
		position relative
		margin-bottom 20px
		min-height 260px
		text-align center
		+r($t)
			min-height 100px
		img
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
			max-width 100%
			height auto
			+r($t)
				max-width 60%
			+r($t-s)
				max-width 40%
	&__item-title
		font-size 23px
		text-align center
		color #636362
		+r($t)
			font-size 17px

