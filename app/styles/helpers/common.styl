html,
body
	height 100%

.main
	min-height 100%
	margin-bottom -140px

* html
	.main
		height 100%

.page__buffer
	height 140px

.page
	font-family $cR
	font-weight normal
	font-size 17px
	line-height 20px
	color #4d4d4d
	background #fff
// .page_inner
// 	padding-top 50px

.in-second
	margin auto
	padding-right 20px
	padding-left 20px
	max-width 1300px
	width 100%
	min-width 320px
.in
	margin auto
	padding-right 20px
	padding-left 20px
	max-width 1320px
	width 100%
	min-width 320px

.button
	border none
	padding-top 15px
	padding-left 40px
	padding-right 40px
	padding-bottom 16px
	display inline-block
	vertical-align top
	font-size 19px
	text-align center
	line-height 1
	background #86B541
	color #fff
	border-radius 25px
	text-decoration none
	transition background .3s ease
	&:hover
		background darken(#86B541, 10)

.button-small
	border none
	padding-top 8px
	padding-left 22px
	padding-right 22px
	padding-bottom 8px
	display inline-block
	vertical-align top
	font-size 17px
	text-align center
	line-height 1
	background #86B541
	color #fff
	border-radius 25px
	text-decoration none
	transition background .3s ease
	&:hover
		background darken(#86B541, 10)

.button-big
	border none
	padding-top 15px
	padding-bottom 16px
	display inline-block
	vertical-align top
	font-size 23px
	text-align center
	line-height 1
	color #fff
	border-radius 25px
	text-decoration none
	transition background .3s ease


// titles

.title
	padding-left 5px
	font-family $cR
	font-size 31px
	line-height 1.2
	color #4d4d4d
	+r($d)
		padding-left 0
// wysiwyg editor styles

.wysiwyg

	h1,
	h2,
	h3,
	h4,
	h5,
	h6
		margin-bottom 30px
		font-family $cR
		line-height 1.2
		+r($t)
			line-height 1.1
	h1
		font-size 31px
	h2
		font-size 23px
		// letter-spacing tracking(100)
	h3
		font-size 23px
		// letter-spacing tracking(0)
	h4
		font-size 26px
		// letter-spacing tracking(0)
	h5
		font-size 26px
		// letter-spacing tracking(0)
	p
		margin-bottom 36px
		font-size 17px
		line-height 21px
		&:first-letter
			padding-left 20px
		+r($d)
			margin-bottom 10px
		b
			font-weight $cB
	pre
		margin-bottom 30px
		padding-bottom 25px

	em
		font-family $cI


	ul,
	ol
		margin-bottom 30px
	ul
		li
			position relative
			padding-left 20px
			&:after
				position absolute
				top 50%
				left 0
				margin-top -5px
				width 10px
				height 10px
				background #86b541
				border-radius 50%
				content ""
	li
		margin-bottom 15px

	img
		margin-bottom 20px
		max-width 100%
		height auto

	.alignright
		margin-left 20px
		margin-bottom 20px
		padding 15px 20px
		float right
		background #F0F0F1
		+r($t)
			margin-left 0
			float none

	.alignleft
		margin-bottom 20px
		margin-right 20px
		padding 15px 20px
		float left
		background #F0F0F1
		+r($t)
			margin-right 0
			float none

	blockquote
		position relative
		margin-bottom 30px
		padding-top 10px
		padding-bottom 10px
		padding-left 20px
		font-family $cI
		font-size 17px
		&:before
			position absolute
			top 0
			left 0
			width 10px
			height 80px
			background #86b541
			content ""
		p
			margin-bottom 0
			font-family $cI

	a
		color #86B541
		text-decoration none
		&:hover
			text-decoration underline

	table
		margin-top 20px
		margin-bottom 20px
		background #FFF
		th,
		td
			border 1px solid #d6d6d6
			padding 20px 30px
			text-align left
			+r($t)
				padding 5px 10px
			+r($t-s)
				padding 5px 10px

		th
			font-size 23px
			text-align center
			+r($t)
				font-size 19px
			+r($t-s)
				font-size 17px

		td
			font-size 17px
			text-align left
			+r($t-s)
				font-size 13px
.table
	margin-bottom 30px
	padding 30px 20px 20px
	background url(../images/general/pattern.jpg) 0 0 repeat
.main__wysiwyg-w
	overflow hidden
