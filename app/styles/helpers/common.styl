html,
body
	height 100%

.main
	min-height 100%
	margin-bottom -140px

* html
	.main
		height 100%

.page__buffer
	height 140px

.page
	font-family $cR
	font-weight normal
	font-size 17px
	line-height 20px
	color #4d4d4d
	background #fff
// .page_inner
// 	padding-top 50px

.in-second
	margin auto
	padding-right 20px
	padding-left 20px
	max-width 1300px
	width 100%
	min-width 320px
.in
	margin auto
	padding-right 20px
	padding-left 20px
	max-width 1320px
	width 100%
	min-width 320px

.button
	border none
	padding-top 15px
	padding-left 40px
	padding-right 40px
	padding-bottom 16px
	display inline-block
	vertical-align top
	font-size 19px
	text-align center
	line-height 1
	background #86B541
	color #fff
	border-radius 25px
	text-decoration none
	transition background .3s ease
	&:hover
		background darken(#86B541, 10)
.button-small
	border none
	padding-top 8px
	padding-left 22px
	padding-right 22px
	padding-bottom 8px
	display inline-block
	vertical-align top
	font-size 17px
	text-align center
	line-height 1
	background #86B541
	color #fff
	border-radius 25px
	text-decoration none
	transition background .3s ease
	&:hover
		background darken(#86B541, 10)

// titles

.title
	padding-left 18px
	font-family $cR
	font-size 31px
	line-height 1.2
	color #4d4d4d
	+r($d)
		padding-left 0
// wysiwyg editor styles

.wysiwyg

	h1,
	h2,
	h3,
	h4,
	h5,
	h6
		margin-bottom 30px
		font-family $cR

	h1
		font-size 31px
	h2
		font-size 31px
		// letter-spacing tracking(100)
	h3
		font-size 26px
		// letter-spacing tracking(0)
	h4
		font-size 26px
		// letter-spacing tracking(0)
	h5
		font-size 26px
		// letter-spacing tracking(0)
	p
		margin-bottom 36px
		font-size 17px
		line-height 21px
		&:first-letter
			padding-left 20px
		+r($d)
			margin-bottom 10px
		b
			font-weight $cB
	pre
		margin-bottom 30px
		padding-bottom 25px

	em
		font-family $cI


	ul,
	ol
		margin-bottom 30px
	li
		margin-bottom 15px

	img
		max-width 100%
		height auto


